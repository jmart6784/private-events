<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Event date</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.edate %></td>
        <td><%= event.description %></td>
        <td><%= link_to 'Show', event %></td>
        <% if current_user == event.creator %>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<h1> Upcoming </h1>
<ul>
	<% @upcoming_events.each do |e| %>
	<li>Event Description: <%= e.description %></li>
	<li>Event Date: <%= e.edate %></li>
	<div> <p> </p>
	</div>
	<% end %>
</ul>
<div>
	</div>
<h1> Previous Events </h1>
<ul>
	<% @prev_events.each do |e| %>
	<li>Event Description: <%= e.description %></li>
	<li>Event Date: <%= e.edate %></li>
	<div> <p> </p>
	</div>
	<% end %>
</ul>

<br>

